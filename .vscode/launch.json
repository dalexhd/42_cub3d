	"version": "0.2.0",
	"configurations": [
		{
			"name": "Make standard",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/cub3D",
			"args": [
				"./maps/map.cub"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"preLaunchTask": "C/C++: gcc build active file",
		},
		{
			"name": "Make bonus",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/cub3D",
			"args": [
				"./maps/map_bonus.cub"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"preLaunchTask": "C/C++: gcc build active file",
		}
	]
}
